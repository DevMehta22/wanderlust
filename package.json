{
	"dependencies": {
		"concurrently": "^8.2.2"
	},
	"scripts": {
		"start-frontend": "cd frontend && npm run dev -- --host",
		"start-backend": "cd backend && npm run dev",
		"start": "concurrently -n \"FRONTEND,BACKEND\" -c \"bgBlue,bgYellow\" -p \"[{name}]\" \"npm run start-frontend\" \"npm run start-backend\"",
		"install-frontend": "cd frontend && npm i --verbose",
		"install-backend": "cd backend && npm i --verbose",
		"installer": "npm i && npm run install-frontend && npm run install-backend",
		"prepare": "husky install && chmod ug+x .husky/*"
	},
	"devDependencies": {
		"husky": "^8.0.0"
	}
}
